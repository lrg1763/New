{
	"compilerOptions": {
		// Указывает версию ECMAScript, в которую будет транслироваться ваш код
		"target": "ES2020",

		// Указывает библиотеки, которые будут включены в компиляцию
		"lib": ["dom", "dom.iterable", "esnext"],

		// Базовая директория для разрешения модулей
		"baseUrl": "./",

		// Разрешает использование JavaScript файлов
		"allowJs": true,

		// Пропускает проверку типов в файлах библиотеки
		"skipLibCheck": true,

		// Включает интероперабельность модулей ES и CommonJS
		"esModuleInterop": true,

		// Разрешает использование синтетических импортов по умолчанию
		"allowSyntheticDefaultImports": true,

		// Включает строгий режим проверки типов
		"strict": true,

		// Требует согласованного использования регистров букв в именах файлов
		"forceConsistentCasingInFileNames": true,

		// Предотвращает падение программы в случае отсутствия оператора break в switch
		"noFallthroughCasesInSwitch": true,

		// Указывает модульную систему, которую будет использовать компилятор
		"module": "esnext",

		// Указывает стратегию разрешения модулей
		"moduleResolution": "node",

		// Разрешает импортировать JSON файлы как модули
		"resolveJsonModule": true,

		// Позволяет изолированную компиляцию модулей
		"isolatedModules": true,

		// Предотвращает генерацию выходных файлов
		"noEmit": true,

		// Указывает трансформация JSX в реактовские компоненты
		"jsx": "react-jsx",

		// Разрешает неиспользуемые локальные переменные
		"noUnusedLocals": false,

		// Разрешает неиспользуемые параметры функций
		"noUnusedParameters": false
	},
	// Определяет файлы и директории, которые будут включены в проект
	"include": ["src", "./index.d.ts"]
}
